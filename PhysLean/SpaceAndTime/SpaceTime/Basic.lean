/-- The space part of spacetime. -/
def space {d : ‚Ñï} : SpaceTime d ‚Üí‚Çó[‚Ñù] Space d where
  toFun x := Lorentz.Vector.spatialPart x
  map_add' x1 x2 := by
    ext i
    simp [Lorentz.Vector.spatialPart]
