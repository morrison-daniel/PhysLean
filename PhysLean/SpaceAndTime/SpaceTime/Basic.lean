def coord {d : ‚Ñï} (Œº : Fin (1 + d)) : SpaceTime d ‚Üí‚Çó[‚Ñù] ‚Ñù where
  toFun x := x (finSumFinEquiv.symm Œº)
  map_add' x1 x2 := by
    simp [flip]
