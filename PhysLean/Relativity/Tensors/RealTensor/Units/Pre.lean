  comm M := by
    refine ModuleCat.hom_ext ?_
    refine LinearMap.ext fun x : ‚Ñù => ?_
    simp only [Action.instMonoidalCategory_tensorObj_V, Action.instMonoidalCategory_tensorUnit_V,
      Action.tensorUnit_œÅ, CategoryTheory.Category.id_comp, Action.tensor_œÅ, ModuleCat.hom_comp,
      Function.comp_apply]
    change x ‚Ä¢ preCoContrUnitVal d =
      (TensorProduct.map ((Co d).œÅ M) ((Contr d).œÅ M)) (x ‚Ä¢ preCoContrUnitVal d)
    simp only [Action.instMonoidalCategory_tensorObj_V, _root_.map_smul]
    apply congrArg
